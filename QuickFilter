Sub フィルターON
    Dim SeartchWord As String

    On Error GoTo ErrorHandler
    
    SeartchWord = InputBox("検索文字列を入力してください。")
    ActiveSheet.Range("A1").AutoFilter 1, "*" & SeartchWord & "*"

    Exit Sub


    ErrorHandler:
        MsgBox("エラーが発生しました")
End Sub

Sub フィルターOFF
    ActiveSheet.Range("A1").AutoFilter
End Sub